{
  "name": "basedonlinestopwatch",
  "version": "1.0.0",
  "description": "A comprehensive, free online timer and stopwatch toolkit. No ads, no downloads, no premium paywalls.",
  "type": "module",
  "author": "Based Online Stopwatch Team",
  "license": "MIT",
  "homepage": "https://based-online-stopwatch.com",
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/basedonlinestopwatch.git"
  },
  "keywords": [
    "stopwatch",
    "timer",
    "countdown",
    "classroom",
    "productivity",
    "react",
    "typescript",
    "free",
    "online"
  ],
  "scripts": {
    "dev": "vite",
    "build": "tsc -b && vite build",
    "lint": "eslint .",
    "lint:ci": "eslint . --max-warnings 0",
    "preview": "vite preview",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "prepare": "husky",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage"
  },
  "dependencies": {
    "@chakra-ui/react": "^2.10.9",
    "@emotion/react": "^11.14.0",
    "@emotion/styled": "^11.14.1",
    "@joergdietrich/leaflet.terminator": "^1.3.0",
    "date-fns": "^4.1.0",
    "date-fns-tz": "^3.2.0",
    "framer-motion": "^10.18.0",
    "i18next": "^25.4.2",
    "leaflet": "^1.9.4",
    "localforage": "^1.10.0",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-i18next": "^15.7.3",
    "react-leaflet": "^5.0.0",
    "react-router": "^7.8.2",
    "react-swipeable": "^7.0.2",
    "react-use": "^17.6.0",
    "simple-peer": "^9.11.1",
    "suncalc": "^1.9.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.30.1",
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/leaflet": "^1.9.21",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "@types/simple-peer": "^9.11.8",
    "@types/suncalc": "^1.9.2",
    "@typescript-eslint/eslint-plugin": "^8.44.1",
    "@typescript-eslint/parser": "^8.44.1",
    "@vitejs/plugin-react": "^4.6.0",
    "@vitest/ui": "^3.2.4",
    "eslint": "^9.30.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "globals": "^16.3.0",
    "husky": "^9.1.7",
    "jsdom": "^27.0.0",
    "lint-staged": "^16.1.6",
    "prettier": "^3.6.2",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.35.1",
    "vite": "^7.0.4",
    "vitest": "^3.2.4"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,css,md}": [
      "prettier --write"
    ]
  }
}
